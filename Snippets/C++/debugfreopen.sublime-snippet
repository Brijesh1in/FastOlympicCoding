{
	bool is_debug = false;
	if (argc > 1 && string(argv[1]) == "-debug") {
		is_debug = true;
	}
	if (!is_debug) {
		freopen("${1:file}.in", "r", stdin);
		freopen("${1:file}.out", "w", stdout);
	}
}
